<div id="result"></div>

<script>
function calcularResultado() {
    let scores = { Afrodite: 0, Cleópatra: 0, Atena: 0 };
    let form = document.getElementById("quizForm");
    let dados = new FormData(form);
    let totalPerguntas = 7;

    for (let [name, value] of dados) {
        scores[value]++;
    }

    if (dados.entries().next().done || dados.keys().size < totalPerguntas) {
        if ([...dados.keys()].length < totalPerguntas) {
            alert("Responda todas as perguntas!");
            return;
        }
    }

    let vencedor = Object.keys(scores).reduce((a, b) => scores[a] > scores[b] ? a : b);
    let descricoes = {
        Afrodite: "Você é Afrodite: sedutora, encantadora e movida pela beleza e pelo amor.",
        Cleópatra: "Você é Cleópatra: poderosa, estratégica e com presença marcante.",
        Atena: "Você é Atena: sábia, inteligente e guiada pela razão."
    };
    let links = {
        Afrodite: "https://seusite.com/afrodite",
        Cleópatra: "https://seusite.com/cleopatra",
        Atena: "https://seusite.com/atena"
    };

    document.getElementById("result").innerHTML = `
        <div class="result">
            <h2>${vencedor}</h2>
            <p>${descricoes[vencedor]}</p>
            <a href="${links[vencedor]}" target="_blank">Ver peça da coleção ${vencedor}</a>
        </div>
    `;
}
</script>

